{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/helpers"
        ],
        "myCompilerPath": "/usr/bin/g++"
    },
    "configurations": [
        {
            "name": "Mac",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${myDefaultIncludePath}",
                "${workspaceFolder}/helpers",
                "${workspaceFolder}/helpers/EEPROM/src",
                "${workspaceFolder}/helpers/WiFi/src"
            ],
            "macFrameworkPath": [
                // "/System/Library/Frameworks"
            ],
            "defines": [
                "FOO",
                "BAR=100"
            ],
            "forcedInclude": [
                // "${workspaceFolder}/include/config.h"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            // "compileCommands": "/path/to/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}